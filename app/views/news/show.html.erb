<% content_for(:additional_js) do %>
	<script type="text/javascript">
		Environment.instance().on("loaded", function(){
			news = new NewsView({model: new News(<%= @record.to_json().html_safe %>)});
			news.renderTo($("#root"), true);
		});
	</script>
<% end %>

<%= content_for(:title, "Discussion on news ##{@record.id}: #{@record.title}") %>

<%= render :partial => "partials/news" %>
<%= render :partial => "partials/comments" %>