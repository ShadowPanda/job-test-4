<div class="modal" id="dialogs-auth-login">
	<%= simple_form_for(User.new, url: url_for(controller: :auth, action: "login"), html: {class: "form-horizontal", remote: true, "data-type" => "json"}) do |f| %>
		<div class="modal-header">
			<a class="close" data-dismiss="modal"><i class="icon-remove"></i></a>
			<h3>Login</h3>
		</div>
	   <div class="modal-body">
			<%= f.input :username, label: "Username:", input_html: {class: "span4"} %>
		   <%= f.input :password, label: "Password:", input_html: {class: "span4"} %>
		</div>
	   <div class="modal-footer form-actions">
		   <button type="submit" class="btn btn-primary"><i class="icon-signin"></i> <span>Login</span></button>
		</div>
	<% end %>
</div>

