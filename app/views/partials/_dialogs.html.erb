<div class="modal" id="dialogs-submit-question">
	<%= simple_form_for(Question.new, html: {class: "form-horizontal", remote: true, "data-type" => "json"}) do |f| %>
		<div class="modal-header">
			<a class="close" data-dismiss="modal"><i class="icon-remove"></i></a>
			<h3>Submit question</h3>
		</div>
	   <div class="modal-body">
			<%= f.input :title, label: "Title:", input_html: {class: "span4"} %>
